<h1>Connect an artist and instrument form</h1>

<% if flash[:my_errors] %>
<% flash[:my_erros].each do |error| %>
<%= error %>
<% end %>

<% end %>


<%= form_for @artist_instrument do |f| %>
<%= f.label :artist_id, "Artist" %>
<%= f.collection_select(:artist_id, @artists, :id, :name) %>

<%= f.label :instrument_id, "Instrument" %>
<%= f.collection_select(:instrument_id, @instruments, :id, :name) %>

<%= f.submit %>
<% end %>